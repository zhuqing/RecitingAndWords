/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;

} 

.hor-gap{
  background-color: white;
  height: 2px;
  width: 100%;
}

.ver-gap{
  background-color: white;
  height: auto;
  width: 2px;

}

.title{
  text-align: center;
  font-size: 18px;
  font-weight: bold;
  align-content: center
}

.headerImage{
 width: 100%;

}

.operationbar {
position: fixed;
bottom: 0;
background:  lightgray;
width: 100%;
}

.to-bottom{
  position: fixed;
bottom: 0;
width: 100%;
}

/*横向布局  */
.layout_horizontal{
  height: auto;
  width: 100%;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
}

/*纵向布局  */
.layout_vertical{
  height: auto;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: column;
}
